{
  "manifest_version": 3,
  "name": "LazyTradingChromeExtension",
  "description": "Cryptocurrency trading extension",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "32": "vite.svg"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "*://*.binance.com/*",
    "*://*.upbit.com/*",
    "*://*.bithumb.com/*",
    "*://*.bybit.com/*",
    "*://*.okx.com/*",
    "*://*.huobi.com/*",
    "*://*.kucoin.com/*",
    "*://*.bitget.com/*"
  ],
  "host_permissions": [
    "*://*.binance.com/*",
    "*://*.upbit.com/*",
    "*://*.bithumb.com/*",
    "*://*.bybit.com/*",
    "*://*.okx.com/*",
    "*://*.huobi.com/*",
    "*://*.kucoin.com/*",
    "*://*.bitget.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "32": "vite.svg"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
